# Application Configuration
APP_NAME=GPT5-Mobile-Assistant
DEBUG=True
LOG_LEVEL=INFO

# OpenAI Configuration
# Get your API key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-proj-your-openai-api-key-here
OPENAI_MODEL=gpt-5
OPENAI_REASONING_EFFORT=medium

# Database Configuration
# PostgreSQL connection string format:
# postgresql://username:password@hostname:port/database_name
DATABASE_URL=postgresql://gpt5user:gpt5password@localhost:5432/gpt5_assistant

# For Docker Compose (these are used by docker-compose.yml)
POSTGRES_USER=gpt5user
POSTGRES_PASSWORD=gpt5password
POSTGRES_DB=gpt5_assistant

# Redis Configuration
REDIS_URL=redis://localhost:6379/0
REDIS_PASSWORD=
REDIS_CACHE_TTL=1800

# CORS Configuration
# Add your frontend URLs here (comma-separated for multiple origins)
# For Expo development, use your local network IP
# Example: http://localhost:19000,exp://192.168.1.100:8081
CORS_ORIGINS=["http://localhost:19000", "exp://192.168.1.100:8081"]

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60

# Server Configuration
HOST=0.0.0.0
PORT=8000
WORKERS=1
